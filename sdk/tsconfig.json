{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"lib": ["ES2023", "DOM"],
		"rootDir": "ts",
		"outDir": "js",
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"composite": true,
		"typeRoots": [ "./node_modules/@types" ],
	},
	"include": [
		"./ts/**/*.ts",
	],
}
